<div class="login-page">
    <div class="form-container">
        <h2>Login</h2>
        <form id="login" class="form login-form" action="/api/users/login/" method="POST" enctype="multipart/form-data">
            <div class="input-group">
                <label for="name-login">username:</label>
                <input type="text" id="username-login" name="username"/>
            </div>
            <div class="input-group">
                <label for="password-login">password:</label>
                <input type="password" id="password-login" name="password"/>
            </div>
            <div class="button-container">
                <button type="submit" class="btn btn-primary">login</button>
            </div>
        </form>
    </div>
    <div class="form-container">
        <h2>Signup</h2>
        <form id="signup" class="form signup-form" action="/api/users/" method="POST" enctype="multipart/form-data">
            <div class="input-group">
                <label for="name-signup">username:</label>
                <input type="text" id="username-signup" name="username" />
            </div>
            <div class="input-group">
                <label for="email-signup">email:</label>
                <input type="text" id="email-signup" name="email"/>
            </div>
            <div class="input-group">
                <label for="password-signup">password:</label>
                <input type="password" id="password-signup" name="password"/>
            </div>
            <div class="button-container">
                <button type="submit" class="btn btn-primary">signup</button>
            </div>
        </form>
    </div>
</div>

<script src="/js/handleSubmit.js"></script>
